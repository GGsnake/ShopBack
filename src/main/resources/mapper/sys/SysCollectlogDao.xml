<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="io.sbed.modules.sys.dao.SysCollectlogDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="io.sbed.modules.sys.entity.SysCollectlog" id="collectlogMap">
        <result property="id" column="id"/>
        <result property="sum" column="sum"/>
        <result property="createtime" column="createTime"/>
    </resultMap>

	<select id="queryObject" resultType="io.sbed.modules.sys.entity.SysCollectlog">
		select * from collectlog where id = #{value}
	</select>

	<select id="queryList" resultType="io.sbed.modules.sys.entity.SysCollectlog">
		select * from collectlog
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from collectlog 
	</select>
	 
	<insert id="save" parameterType="io.sbed.modules.sys.entity.SysCollectlog" useGeneratedKeys="true" keyProperty="id">
		insert into collectlog
		(
			`sum`, 
			`createTime`
		)
		values
		(
			#{sum}, 
			now()
		)
	</insert>
	 
	<update id="update" parameterType="io.sbed.modules.sys.entity.SysCollectlog">
		update collectlog 
		<set>
			<if test="sum != null">`sum` = #{sum}, </if>
			<if test="createtime != null">`createTime` = #{createtime}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from collectlog where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from collectlog where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>